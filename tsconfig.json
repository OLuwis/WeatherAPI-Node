{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "lib": ["ES6"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "strictPropertyInitialization": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@auth/*": ["src/components/auth/*"]
        }
    },
    "include": ["src", "__tests__"]
}